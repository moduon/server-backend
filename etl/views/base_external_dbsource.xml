<odoo>
        <record id="view_inherited_base_external_dbsource" model="ir.ui.view">
            <field name="name">view.inherited.base.external.dbview</field>
            <field name="model">base.external.dbsource</field>
            <field name="inherit_id" ref="base_external_dbsource.view_dbsource_form" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='connection_test']" position="after">
                    <button
                    name="load_remote_tables"
                    string="Load remote tables"
                    type="object"
                    class="btn btn-primary o_list_button_add"
                />
                </xpath>
            </field>
        </record>
    </odoo>
