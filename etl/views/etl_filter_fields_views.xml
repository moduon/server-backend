<odoo>

    <record id="etl_filter_fields_tree" model="ir.ui.view">
          <field name="name">etl.filter.fields.tree</field>
          <field name="model">etl.filter.field</field>
          <field name="arch" type="xml">
               <tree editable="top">
                    <field name="process_id" />
                    <field name="table_id" />
                    <field name="field_id" domain="[('table_id','=', table_id)]" />
                    <field name="operator" />
                    <field name="value" />
               </tree>
          </field>
    </record>

    <record id="etl_filter_fields_form" model="ir.ui.view">
          <field name="name">etl.filter.fields.form</field>
          <field name="model">etl.filter.field</field>
          <field name="arch" type="xml">
               <form>
                    <sheet>
                        <group>
                            <field name="process_id" />
                            <field name="table_id" />
                            <field
                            name="field_id"
                            domain="[('table_id','=', table_id)]"
                        />
                            <field name="operator" />
                            <field name="value" />
                            <field name="name" />
                        </group>
                    </sheet>
               </form>
          </field>
    </record>
</odoo>
