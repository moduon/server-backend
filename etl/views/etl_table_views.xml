<odoo>
    <record id="action_etl_details" model="ir.actions.act_window">
        <field name="name">ETL Tables</field>
        <field name="res_model">etl.table</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="etl_external_tables_tree" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Setting external tables
            </p>
        </field>
    </record>

    <record id="etl_external_tables_tree" model="ir.ui.view">
        <field name="name">etl.external.tables.tree</field>
        <field name="model">etl.table</field>
        <field name="arch" type="xml">
            <tree>
                <field name="connection_id" />
                <field name="name" />
                <field name="primary_key_id" />
            </tree>
        </field>
    </record>

    <record id="etl_external_tables_form" model="ir.ui.view">
        <field name="name">etl.external.tables.form</field>
        <field name="model">etl.table</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="connection_id" />
                    </group>
                    <group>
                        <field
                            name="primary_key_id"
                            domain="[('table_id.name','=', name)]"
                        />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
